{
  "manifest_version": 3,
  "name": "Restore Fauna Emotes",
  "version": "__VERSION__",

  "description": "Restore chat emotes on Fauna stream archives.",

  "icons": {
    "48": "icons/sapling-48.png",
    "96": "icons/sapling-96.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "js": ["common/video-ids.js", "common/badges-base64.js", "common/decode.js", "common/patch-message.js", "common/highlights.js", "firefox/isolated.js", "common/yt-observer.js"],
	  "all_frames": true
    },
	{
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
	  "js": ["firefox/main.js"],
	  "all_frames": true,
	  "world": "MAIN"
	}
  ],
  "web_accessible_resources": [
	{
	  "resources": ["emotes/*.png"],
	  "matches": ["<all_urls>"]
	},
	{
	  "resources": ["chat_data/*.json.gz"],
	  "matches": ["<all_urls>"]
	}
  ]
}

